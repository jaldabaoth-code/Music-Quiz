{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('index') }}
{% endblock %}

{% block title %}Music Quiz{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Music Quiz</h1>
		<div class="body">
            <form class="mb-5" action="" method="POST">
                {% for track in tracks %}
                    <div class="bg-light d-flex justify-content-center flex-column p-2 m-3 rounded">
                        <h2 class="fw-bold col-12">The music " {{ track["title"] }}" belongs to which singer?</h3>
                        <div class="col-12">
                            {% for i in 1..3 %}
                                <input class="form-check-input" type="radio" name="{{ track["id"] }}" id="{{ track["id"] ~ i }}" value="{{ artists[i].name }}">
                                <label class="form-check-label me-5" for="{{ track["id"] ~ i }}">
                                    {{ artists[i].name }}
                                </label>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
                <button type="button" class="btn btn-primary col-12">Send</button>
            </form>
        </div>
    </div>
{% endblock %}
